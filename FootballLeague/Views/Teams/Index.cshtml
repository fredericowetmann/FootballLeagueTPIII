@model IEnumerable<FootballLeague.Models.Team>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<h2>Index</h2>

<div style="margin-bottom: 20px;">
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fas fa-plus"></i> Novo Time
    </a>
</div>

<table class="table table-centered">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>

        <th>@Html.DisplayNameFor(model => model.City)</th>

        <th>@Html.DisplayNameFor(model => model.State)</th>

        <th>@Html.DisplayNameFor(model => model.FoundationYear)</th>

        <th>@Html.DisplayNameFor(model => model.Stadium)</th>

        <th>@Html.DisplayNameFor(model => model.CapacityStadium)</th>

        <th>@Html.DisplayNameFor(model => model.MainColors)</th>

        <th>@Html.DisplayNameFor(model => model.SecondaryColors)</th>

        <th>@Html.DisplayNameFor(model => model.Status)</th>

        <th>Ações</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>

            <td>@Html.DisplayFor(modelItem => item.City)</td>

            <td>@Html.DisplayFor(modelItem => item.State)</td>

            <td>@Html.DisplayFor(modelItem => item.FoundationYear)</td>

            <td>@Html.DisplayFor(modelItem => item.Stadium)</td>

            <td>@Html.DisplayFor(modelItem => item.CapacityStadium)</td>

            <td>@Html.DisplayFor(modelItem => item.MainColors)</td>

            <td>@Html.DisplayFor(modelItem => item.SecondaryColors)</td>

            <td>
                <span class="status-circle @(item.Status ? "green" : "red")" title="@item.StatusText"></span>
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-primary" title="Editar">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info" title="Detalhes">
                    <i class="fas fa-info-circle"></i>
                </a>
                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger" title="Excluir">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>

        </tr>
    }

</table>
